<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiyuan.mapper.NoteTypeMapper">

    <insert id="insertNoteType">
        insert into note_type(name, create_time)
        values (#{name}, #{createTime})
    </insert>
    <delete id="deleteNoteTypeById">
        delete
        from note_type
        where id = #{id}
    </delete>
    <update id="updateNoteType">
        update note_type
        set
        <if test="name != null">
            name = #{name},
        </if>
        <if test="updateTime != null">
            update_time = #{updateTime}
        </if>
        where id = #{id}
    </update>
    <select id="getNoteTypeById" resultType="com.qiyuan.pojo.NoteType">
        select *
        from note_type
        where id = #{id}
    </select>
    <select id="getAllNoteTypes" resultType="com.qiyuan.pojo.NoteType">
        select *
        from note_type
    </select>
</mapper>
